<h1>Список устройств</h1>
<table border="1">
  <thead>
    <tr>
      <th>S/N</th>
      <th>Address</th>
      <th>Description</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% @devices.each do |device| %>
      <tr>
        <td><%= device.serial_number %></td>
        <td><%= device.address %></td>
        <td><%= device.description %></td>
        <td><%= device.status %></td>
      </tr>
    <% end %>
  </tbody>
</table>
